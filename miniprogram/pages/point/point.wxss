/* miniprogram/pages/point/point.wxss *//* miniprogram/pages/note/note.wxss */
@import "../../style/iconfont-weapp-icon.wxss";
page{
  background: #ffffff;
}
/* note细节 */
.note-list{
  margin-top: 10px;
  width: 80%;
  margin-left: 10%;
  border-bottom: 1px solid #f6f8fa;
  justify-content: center;
}
.note-time{
  color: #cbcfd2;
  font-size: 13px;
}

/* note细节end */
.note-add{
  position: fixed;
  width: 100%;
  display: flex;
  bottom: 10px;
  justify-content: center;
}
.navi-add{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 30px;
  width: 72px;
  background: #ffffff;
  border-radius: 20px;
  border: 1px solid #b7babd;
  box-shadow: 0px 2px 1px 1px #7e8081;
}
.page_row{
  display: flex;
  flex-direction: row
}
.weui-icon-clear{
  top: 30% !important
}
.weui-icon-search_in-box{
  top: 58% !important
}
.add-menu{
    height: 30px;
    width: 30px;
    background-color: #ffffff;
    background-size: 30px 30px;
    background-repeat:no-repeat;
    position: absolute;
    right: 0px;
}
.add-menu image{
    height: 30px;
    width: 30px;
}
.menu{
    display: flex;
}
movable-view{
    width: 100vw;
    height: 120rpx; 
    z-index: 999;
    background: #fff;
}
movable-area{
    width: calc(100vw - 120rpx);
    height: 120rpx; 
}
.delete-btn {
    position: absolute;
    top: 0;
    bottom: 0;
    right: 0; 
    width: 120rpx;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #FFFFFF;
    line-height: 120rpx;
    z-index: 1;
    background: #E66671;
    text-align: center;
}
.item{
    position: relative;
    width: 100vw;
    border-bottom: 2rpx solid #E9E9E9;
    box-sizing: border-box;
    background: #fff;
}
.item-det{
    position: relative;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    height: 120rpx;
}
.navi-item{
    height: 120rpx;
}
.navi-view{
    height: 120rpx;
    width: 100vw;
    display: flex;
    align-items: center;
}
.addm{
  display: flex;
}
.addm input{
  height: 30px;
  width: 90vw;
}

